<div class="modal fade" id="new_movie_modal" tabindex="-1" role="dialog">
  <h3>Add a movie to your <%= list.name %></h3>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, collection: Movie.all.order(:title), prompt: "Select a movie", input_html: { data: { controller: "select2" } } %>
    <%= f.input :comment, placeholder: "Enter your comment" %>
</div>
