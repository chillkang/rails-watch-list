<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a wishlist to your <%= @list.name %> list</h3><br />
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.association :movie, prompt: 'Select your wishlist', label: false, input_html: { data: { controller: 'select2' } } %>
          <%= f.input :comment, placeholder: 'Enter you comment about this' %>
          <div class="form-actions d-flex justify-content-center">
          <%= f.submit "Done", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
