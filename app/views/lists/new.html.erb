<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <br /><h2 class="text-white">Create a new list</h2>
        <%= simple_form_for @list do |f| %>
          <div class="form-inputs text-white">
            <%= f.input :name, placeholder: 'Drama' %>
